{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "automergeStrategy": "rebase",
    "automergeType": "pr",
    "dockerfile": {
        "autoApprove": true,
        "automerge": true,
        "enabled": true,
        "fileMatch": [
            "\\.conf$"
        ],
        "ignoreTests": false,
        "includePaths": [
            "./build-args-konflux.conf"
        ],
        "platformAutomerge": true,
        "schedule": [
            "at any time"
        ]
    },
    "extends": [
        "https://github.com/konflux-ci/mintmaker/blob/main/config/renovate/renovate.json?raw=true"
    ],
    "pruneBranchAfterAutomerge": true,
    "pruneStaleBranches": true,
    "tekton": {
        "autoApprove": true,
        "automerge": true,
        "enabled": true,
        "fileMatch": [
            "\\.yaml$",
            "\\.yml$"
        ],
        "ignoreTests": false,
        "includePaths": [
            ".tekton/**"
        ],
        "platformAutomerge": true,
        "schedule": [
            "at any time"
        ]
    },
    "git-submodules": {
        "schedule": [
            "at any time"
        ]
    }
}