{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "automergeStrategy": "rebase",
    "automergeType": "pr",
    "dockerfile": {
        "autoApprove": true,
        "automerge": true,
        "enabled": true,
        "fileMatch": [
            "\\.conf$"
        ],
        "ignoreTests": false,
        "platformAutomerge": true,
        "schedule": [
            "at any time"
        ]
    },
    "gomod": {
        "enabled": false
    },
    "pruneBranchAfterAutomerge": true,
    "tekton": {
        "enabled": true,
        "fileMatch": [
            "\\.yaml$",
            "\\.yml$"
        ],
        "ignoreTests": false,
        "includePaths": [
            ".tekton/**"
        ],
        "platformAutomerge": true,
        "schedule": [
            "at any time"
        ],
        "packageRules": [
            {
                "addLabels": [
                    "approved",
                    "lgtm"
                ],
                "automerge": true,
                "matchUpdateTypes": [
                    "digest"
                ]
            }
        ]
    },
    "git-submodules": {
        "enabled": true,
        "packageRules": [
            {
                "matchFileNames": [
                    "ztp/resource-generator/**"
                ],
                "schedule": [
                    "at any time"
                ],
                "additionalBranchPrefix": "ztp/resource-generator-"
            },
            {
                "matchFileNames": [
                    "cnf-tests/submodules/**"
                ],
                "additionalBranchPrefix": "cnf-tests/submodules-"
            }
        ]
    }
}