{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "automergeStrategy": "rebase",
    "automergeType": "pr",
    "prConcurrentLimit": 0,
    "dockerfile": {
        "autoApprove": true,
        "automerge": true,
        "enabled": true,
        "fileMatch": [
            "\\.conf$"
        ],
        "ignoreTests": false,
        "platformAutomerge": true,
        "schedule": [
            "at any time"
        ],
        "postUpgradeTasks": {
           "commands": ["rpm-lockfile-prototype rpms.in.yaml"],
           "fileFilters": ["rpms.lock.yaml"]
        }
    },
    "gomod": {
        "enabled": false
    },
    "pruneBranchAfterAutomerge": true,
    "rpmVulnerabilityAutomerge": "ALL",
    "tekton": {
        "enabled": true,
        "fileMatch": [
            "\\.yaml$",
            "\\.yml$"
        ],
        "ignoreTests": false,
        "includePaths": [
            ".tekton/**"
        ],
        "platformAutomerge": true,
        "schedule": [
            "at any time"
        ],
        "packageRules": [
            {
                "addLabels": [
                    "approved",
                    "lgtm"
                ],
                "automerge": true,
                "matchUpdateTypes": [
                    "digest"
                ]
            }
        ]
    },
    "git-submodules": {
        "enabled": true,
        "packageRules": [
            {
                "matchFileNames": [
                    "ztp/resource-generator/**"
                ],
                "schedule": [
                    "at any time"
                ],
                "additionalBranchPrefix": "ztp/resource-generator-"
            },
            {
                "matchFileNames": [
                    "cnf-tests/submodules/**"
                ],
                "additionalBranchPrefix": "cnf-tests/submodules-"
            }
        ]
    },
    "packageRules": [
        {
            "matchManagers": ["rpm", "dockerfile"],
            "groupName": "RPM and container image updates",
            "schedule": ["before 3am on Monday"]
        }
    ]
}