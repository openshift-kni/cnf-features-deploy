{{ with .Data.DiskEncryption }}{{ if eq .Type "nbde" -}}
apiVersion: machineconfiguration.openshift.io/v1
kind: MachineConfig
metadata:
  name: disk-encryption-{{ $.Role }}
  labels:
    machineconfiguration.openshift.io/role: {{ $.Role }}
spec:
  config:
    ignition:
      version: 3.2.0
    storage:
      luks:
        - name: root
          device: /dev/disk/by-partlabel/root
          clevis:
            tang:
            {{- range .Tang }}
                - url: "{{ .URL }}"
                  thumbprint: "{{ .Thumbprint }}"
            {{- end }}
          options: [--cipher, aes-cbc-essiv:sha256]
          wipeVolume: true
      filesystems:
        - device: /dev/mapper/root
          format: xfs
          wipeFilesystem: true
          label: root
    systemd:
      units:
        - name: "flush-dracut-network.service"
          enabled: true
          contents: |
            # When there's a mismatch between what dracut brings up to provision NBDE and what the final system sets up
            # fushing the dracut-provisioned network addresses allows the main system's NetworkManager to complete properly.
            [Unit]
            Description=Remove any lingering dracut network configuration
            ConditionKernelCommandLine=rd.neednet=1
            Before=network-pre.target
            Wants=network-pre.target

            [Service]
            ExecStart=bash -c "ip -j addr show | jq -r '(.[] | select((.addr_info | length) > 0)).ifname | select(. != \"lo\")' | xargs -n 1 ip -s addr flush dev"

            [Install]
            WantedBy=default.target
        - name: "initramfs-network-config-sync.service"
          enabled: true
          contents: |
            [Unit]
            Description=Sync the main system network configuration into initramfs for consistency at boot
            After=NetworkManager.service

            [Service]
            Type=simple
            ExecStart=rpm-ostree ex initramfs-etc --track /etc/NetworkManager

            [Install]
            WantedBy=default.target
    kernelArguments:
      - rd.neednet=1
{{- end }}{{ end }}
